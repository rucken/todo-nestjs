{
  "name": "rucken-todo-nestjs",
  "version": "3.0.0",
  "engines": {
    "node": ">=10",
    "npm": ">=6.4.0"
  },
  "license": "MIT",
  "author": {
    "name": "EndyKaufman",
    "email": "admin@site15.ru"
  },
  "description": "A simple todo application demonstrating the basic usage of permissions with NestJS (JWT, Passport, Facebook, Google+, User, Group, Permission)",
  "bugs": {
    "url": "https://github.com/todo/core-nestjs/issues"
  },
  "homepage": "https://github.com/todo/core-nestjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/todo/core-nestjs.git"
  },
  "keywords": [
    "jwt",
    "oauth",
    "passport",
    "facebook",
    "google+",
    "user",
    "group",
    "permission",
    "contenttype",
    "bootstrap",
    "nestjs",
    "heroku",
    "typedoc",
    "todo"
  ],
  "maintainers": [
    {
      "name": "EndyKaufman",
      "email": "admin@site15.ru"
    }
  ],
  "scripts": {
    "tsc": "tsc",
    "clean": "./node_modules/.bin/del-cli dist www/docs database/sqlitedb.db",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:dev": "cross-env DB_SOURCE_EXT=ts nodemon",
    "start:prod": "cross-env NODE_ENV=production ./node_modules/.bin/pm2 start dist/main.js --name todo",
    "start:hmr": "cross-env NODE_ENV=production node dist/main.hmr.js",
    "start": "node dist/main.js",
    "stop": "./node_modules/.bin/pm2 kill",
    "logs": "./node_modules/.bin/pm2 logs",
    "logs:flush": "./node_modules/.bin/pm2 flush",
    "test": "npm run build",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "migrate:create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create",
    "migrate:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate",
    "migrate": "cross-env DB_SOURCE_EXT=ts ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run",
    "docs": "./node_modules/.bin/typedoc --ignoreCompilerErrors --excludeExternals --out www/docs src",
    "md-to-html": "showdown makehtml -i README.md -o frontend/index.html",
    "frontend": "run-s frontend:copy-readme-from-backend frontend:build frontend:copy-to-backend",
    "build": "run-s clean prepare:all format docs tsc migrate frontend",
    "heroku-postbuild": "npm run build",
    "prepare:core": "rucken make-ts-list ./src/libs/core",
    "prepare:auth": "rucken make-ts-list ./src/libs/auth",
    "prepare:all": "run-s prepare:core prepare:auth",
    "postinstall": "run-s frontend:install",
    "frontend:install": "cd frontend && npm install",
    "frontend:build": "cd frontend && npm run build",
    "frontend:copy-readme-from-backend": "./node_modules/.bin/cp-cli ./README.md ./frontend",
    "frontend:copy-to-backend": "./node_modules/.bin/cp-cli ./frontend/dist/todo-client ./www"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/typeorm": "^5.2.2",
    "@types/passport-facebook-token": "^0.4.33",
    "@types/passport-local": "^1.0.33",
    "chmod": "^0.2.1",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "connection-string": "^1.0.1",
    "del-cli": "^1.1.0",
    "dotenv": "^6.1.0",
    "fastify-formbody": "^2.0.1",
    "jsonwebtoken": "^8.4.0",
    "node-django-hashers": "^1.1.6",
    "passport": "^0.4.0",
    "passport-facebook-token": "^3.3.0",
    "passport-google-plus-token": "^2.1.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.6.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "sqlite3": "^4.0.4",
    "typedoc": "^0.14.1",
    "typeorm": "^0.2.9",
    "typescript": "^3.1.6"
  },
  "cacheDirectories": [
    "node_modules"
  ],
  "devDependencies": {
    "@nestjs/testing": "^5.4.0",
    "@rucken/cli": "^3.2.3",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^24.0.7",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/node": "^10.12.9",
    "@types/supertest": "^2.0.6",
    "conventional-changelog-cli": "^2.0.11",
    "conventional-commits-detector": "^1.0.2",
    "conventional-recommended-bump": "^4.0.4",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.3",
    "pm2": "^3.2.2",
    "prettier": "^1.15.2",
    "showdown": "^1.9.0",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "~5.12.1",
    "tslint-config-prettier": "^1.16.0",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2",
    "cp-cli": "^1.1.2"
  },
  "greenkeeper": {
    "ignore": [
      "typescript"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
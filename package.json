{
  "name": "rucken-todo-nestjs",
  "version": "2.0.0",
  "description": "A simple todo application demonstrating the basic usage of Rucken and Angular5+ with NestJS",
  "repository": "https://github.com/rucken/todo-nestjs.git",
  "engines": {
    "node": "8.11.x",
    "npm": "5.8.x"
  },
  "author": {
    "name": "EndyKaufman",
    "email": "admin@site15.ru"
  },
  "keywords": [
    "jwt",
    "passwordhash",
    "user",
    "group",
    "permission",
    "contenttype",
    "bootstrap",
    "nestjs",
    "heroku",
    "typedoc"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "./node_modules/.bin/del-cli dist www database/sqlitedb.db",
    "start": "node index.js",
    "start:watch": "nodemon",
    "build:without-frontend": "npm-run-all clean docs migrate",
    "build": "npm-run-all clean frontend docs migrate",
    "test": "npm run build",
    "migrate:create": "ts-node ./node_modules/typeorm/cli.js migration:create",
    "migrate:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate",
    "migrate": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "docs": "./node_modules/.bin/typedoc --ignoreCompilerErrors --excludeExternals --out www/docs src",
    "frontend:install": "cd frontend && npm install && cd ..",
    "frontend:build": "cp-cli ./README.md ./frontend/README.md && cd frontend && npm run app:build-mono_prod && cd ..",
    "frontend": "npm-run-all frontend:install frontend:build",
    "heroku-postbuild": "npm run build"
  },
  "cacheDirectories": [
    "node_modules"
  ],
  "dependencies": {
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/microservices": "^5.0.0",
    "@nestjs/swagger": "^2.0.0",
    "@nestjs/testing": "^5.0.0",
    "@nestjs/typeorm": "^3.0.0",
    "@nestjs/websockets": "^5.0.0",
    "@types/dotenv": "^4.0.3",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/node": "^10.1.0",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.8.5",
    "connection-string": "^0.4.1",
    "del-cli": "^1.1.0",
    "dotenv": "^5.0.1",
    "express-spa-router": "0.0.8",
    "jsonwebtoken": "^8.2.1",
    "node-django-hashers": "^1.0.9",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.1.0",
    "sqlite3": "^4.0.0",
    "swagger-test-templates": "^1.4.3",
    "ts-node": "^6.0.3",
    "tweetnacl-util": "^0.15.0",
    "typedoc": "^0.11.1",
    "typeorm": "^0.2.5",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "conventional-changelog-cli": "^1.3.21",
    "conventional-commits-detector": "^0.1.1",
    "conventional-recommended-bump": "^2.0.8",
    "cp-cli": "^1.1.2",
    "nodemon": "^1.17.3",
    "npm-run-all": "^4.1.2"
  }
}
